---
import Icon from "./Icon.astro";
// nav bar should be fixed to the top of the screen
---

<nav class="fixed top-0 left-0 right-0 z-50">
  <div class="container mx-auto">
    <div class="flex justify-between items-center">
      <a
        href="/"
        class="font-cal tracking-wider flex justify-between items-center gap-2 p-6 text-lg backdrop-blur-md rounded-full"
        style="mask-image: linear-gradient(to bottom, black 30%, transparent)"
      >
        <Icon
          icon="terminal-window"
          size="1.6rem"
          gradient
          color="var(--accent-neutral)"
        />
         Joshua Santos
      </a>
    </div>
  </div>
</nav>
